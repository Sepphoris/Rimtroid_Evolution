<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Cryo Rifle -->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>RT_CryoRifle</defName>
    <label>Cryo Rifle</label>
    <description>A specialized cryotech assault rifle, infamous for it's cruelty. The supercooled, explosive projectiles it fires pierce flesh as easily as any other bullet, then detonate within the body as they lose their icy coating. The constant agony they cause is quite potent, and quite illegal in many societies.</description>
    <graphicData>
      <texPath>Things/Weapons/CryoRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
   <generateCommonality>0</generateCommonality>
    <statBases>
      <MarketValue>3200</MarketValue>
      <WorkToMake>30000</WorkToMake>
      <Mass>4</Mass>
      <AccuracyTouch>0.4</AccuracyTouch>
      <AccuracyShort>0.6</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.5</AccuracyLong>
      <RangedWeapon_Cooldown>4</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Spacer</techLevel>
    <costList>
      <Steel>250</Steel>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>RT_CryoBullet</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>28</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>Shot_ChargeRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <researchPrerequisites>
      <li>RT_MetroidDefenses</li>
    </researchPrerequisites>
  </ThingDef>

